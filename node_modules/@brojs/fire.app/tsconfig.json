  "compilerOptions": {
    "lib": [
      "dom",
      "ESNext"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "src/typings",
      "../../node_modules/@types"
